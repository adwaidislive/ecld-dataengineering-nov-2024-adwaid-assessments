{ 
    "tables": 
    [ 
        { 
            "name": "customers", 
            "columns": [ 
                { 
                    "name": "customer_id", 
                    "type": "string", 
                    "required": true, 
                    "validation": { 
                        "pattern": "^CUS[0-9]{6}$" 
                    } 
                }, 
                { 
                    "name": "purchase_amount", 
                    "type": "decimal", 
                    "required": true, 
                    "validation": { 
                        "min": 0, 
                        "max": 1000000 
                    } 
                } 
            ] 
        } 
    ] 
}